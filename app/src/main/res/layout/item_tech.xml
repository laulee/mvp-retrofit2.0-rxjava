<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorBackground"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_tech_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:transitionName="shareView"
        app:cardBackgroundColor="@color/colorCard"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:contentPadding="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tech_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"/>

                <TextView
                    android:id="@+id/tv_tech_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_tech_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:drawablePadding="6dp"
                    android:drawableStart="@mipmap/ic_author"
                    android:textColor="@color/comment_reply"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@mipmap/ic_author"/>

                <TextView
                    android:id="@+id/tv_tech_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="3dp"
                    android:drawablePadding="6dp"
                    android:drawableStart="@mipmap/ic_time"
                    android:textColor="@color/comment_reply"
                    android:drawableLeft="@mipmap/ic_time"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>